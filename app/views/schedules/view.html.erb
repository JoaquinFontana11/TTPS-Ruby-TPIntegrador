<div class="p-10"> 

    <% flash.each do |type, msg| %>
        <% if type == "alert"%>
        <div class="flex justify-center text-red-700 font-bold text-xl p-3">
            <%= msg %>
        </div>
        <% else %>
            <div class="flex justify-center text-green-700 font-bold text-xl p-3">
                <%= msg %>
            </div>
        <% end %>
    <% end %>

    <div class="text-2xl text-gray-900 font-bold flex justify-center">
        <h1>Horarios de la Sucursal: <%= @branch_office.name %></h1>
    </div>

    <div class="overflow-x-auto relative shadow-md sm:rounded-lg my-8">
        <table class="w-full text-sm text-left text-gray-500">
        <thead class="text-xs text-gray-700 uppercase bg-gray-100 ">
            <tr>
            <th scope="col" class="py-3 px-6">
                Lunes
            </th>
            <th scope="col" class="py-3 px-6">
                Martes
            </th>
            <th scope="col" class="py-3 px-6">
                Miercoles
            </th>
            <th scope="col" class="py-3 px-6">
                Jueves
            </th>
            <th scope="col" class="py-3 px-6">
                Viernes
            </th>
            <th scope="col" class="py-3 px-6">
                Sabado
            </th>
            <th scope="col" class="py-3 px-6">
                Domingo
            </th>
            <th scope="col" class="py-3 px-6">
                Acciones
            </th>
            </tr>
        </thead>
        <tbody>
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                <td class="py-4 px-6">
                    <% if @schedule.mondayInit.strftime("%R") == "00:00" && @schedule.mondayFinish.strftime("%R") == "00:00" %>
                        <span>CERRADO</span>
                    <% else %>
                        <%= @schedule.mondayInit.strftime('%R') %>
                        <span>A</span>
                        <%= @schedule.mondayFinish.strftime('%R') %>
                    <% end %>
                </td>
                <td class="py-4 px-6">
                    <% if @schedule.tuesdayInit.strftime("%R") == "00:00" && @schedule.tuesdayFinish.strftime("%R") == "00:00" %>
                        <span>CERRADO</span>
                    <% else %>
                        <%= @schedule.tuesdayInit.strftime('%R') %>
                        <span>A</span>
                        <%= @schedule.tuesdayFinish.strftime('%R') %>
                    <% end %>
                </td>
                <td class="py-4 px-6">
                <% if @schedule.wednesdayInit.strftime("%R") == "00:00" && @schedule.wednesdayFinish.strftime("%R") == "00:00" %>
                        <span>CERRADO</span>
                    <% else %>
                    <%= @schedule.wednesdayInit.strftime('%R') %>
                    <span>A</span>
                    <%= @schedule.wednesdayFinish.strftime('%R') %>
                    <% end %>
                </td>
                <td class="py-4 px-6">
                <% if @schedule.thursdayInit.strftime("%R") == "00:00" && @schedule.thursdayFinish.strftime("%R") == "00:00" %>
                        <span>CERRADO</span>
                    <% else %>
                    <%= @schedule.thursdayInit.strftime('%R') %>
                    <span>A</span>
                    <%= @schedule.thursdayFinish.strftime('%R') %>
                    <% end %>
                </td>
                <td class="py-4 px-6">
                <% if @schedule.fridayInit.strftime("%R") == "00:00" && @schedule.fridayFinish.strftime("%R") == "00:00" %>
                        <span>CERRADO</span>
                    <% else %>
                    <%= @schedule.fridayInit.strftime('%R') %>
                    <span>A</span>
                    <%= @schedule.fridayFinish.strftime('%R') %>
                    <% end %>
                </td>
                <td class="py-4 px-6">
                <% if @schedule.saturdayInit.strftime("%R") == "00:00" && @schedule.saturdayFinish.strftime("%R") == "00:00" %>
                        <span>CERRADO</span>
                    <% else %>
                    <%= @schedule.saturdayInit.strftime('%R') %>
                    <span>A</span>
                    <%= @schedule.saturdayFinish.strftime('%R') %>
                    <% end %>
                </td>
                <td class="py-4 px-6">
                <% if @schedule.sundayInit.strftime("%R") == "00:00" && @schedule.sundayFinish.strftime("%R") == "00:00" %>
                        <span>CERRADO</span>
                    <% else %>
                    <%= @schedule.sundayInit.strftime('%R') %>
                    <span>A</span>
                    <%= @schedule.sundayFinish.strftime('%R') %>
                    <% end %>
                </td>
                <td class="py-4 px-6">
                    <% if current_user.admin? %>
                        <%= link_to "Editar", schedule_edit_path(@schedule), class: "font-medium text-blue-600 dark:text-blue-500 hover:underline"%>
                    <% end %>
                </td>
            </tr>
        </tbody>
        </table>
    </div>
</div>